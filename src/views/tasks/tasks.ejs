<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <%- include('../layouts/header', { isGuest: isGuest}) %>
                <% if (messages.success_msg) { %>
                 <div class="alert alert-success" role="alert">
                    <%= messages.success_msg %>
                </div>
                <% } %>
                
                <% if (messages.error_msg) { %>
                 <div class="alert alert-danger" role="alert">
                    <%= messages.error_msg %>
                 </div>
                <% } %>
                
                <h1 class="mb-4">Tasks</h1>
                <style>
                    .btn-custom {
                        width: 10%;
                    }
                </style>
                <div>
                    <button class="btn btn-primary"><a class="nav-link px-2 link-light" href="/tasks/new">Add New</a></button>
                </div>
                <table class="table table-striped">
                    <thead>
                      <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Name</th>
                        <th scope="col">Status</th>
                        <th scope="col">Creator</th>
                        <th scope="col">Executor</th>
                        <th scope="col">Created At</th>
                        <th scope="col">Actions</th>
                      </tr>
                    </thead>
                    <tbody>
                        <% tasks.forEach(row => { %>
                            <tr>
                                <th scope="row"><%= row.id %> </th>
                                <td><a href="/tasks/<%= row.id %>"><%= row.name %></a> </td>
                                <td><%= row.status_name %> </td>
                                <td><%= row.first_name %> <%= row.last_name %> </td>
                                <td><%= row.exc_first_name %> <%= row.exc_last_name %> </td>
                                <td><%= row.created_at %> </td>
                                <td class="d-flex gap-2">
                                    <button class="btn btn-primary"><a class="nav-link px-2 link-light" href="/tasks/<%= row.id %>/edit">Change</a></button>
                                    <form action="/tasks/<%= row.id %>?_method=DELETE" method="POST">
                                        <button class="btn btn-danger">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                  </table>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>